#!/usr/bin/env bash

cp /home/username/android_kernel_mts_982t_kernel_mts_982t/mts982t/out/target/product/mts982t/kernel_mts982t.bin /home/username/android_kernel_mts_982t_kernel_mts_982t/tools/mtk-tools
cp /home/username/android_kernel_mts_982t/mts982t/boot/boot.img /home/username/android_kernel_mts_982t/tools/mtk-tools
cd /home/username/android_kernel_mts_982t/tools/mtk-tools
./unpack-MT65xx.pl boot.img
rm boot.img
rm boot.img-kernel.img
cd /home/username/android_kernel_mts_982t/tools/mtk-tools/
./repack-MT65xx.pl -boot kernel_mts982t.bin boot.img-ramdisk boot.img
